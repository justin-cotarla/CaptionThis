server {
    listen 80;
    
    charset utf-8;

    location / {
        root /var/www/;
    }
}

server {
    listen 16085;
    
    charset utf-8;

    location /api {
        proxy_pass http://backend-prod:8000;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    }
}